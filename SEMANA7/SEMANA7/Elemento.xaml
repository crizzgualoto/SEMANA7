<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEMANA7.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar-eliminar" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Contrasena"/>

            <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="Eliminar" Text="ELIMINAR" Clicked="Eliminar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>